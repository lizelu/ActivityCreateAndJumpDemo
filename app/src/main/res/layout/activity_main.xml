<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lizelu.helloworld.MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/return_textview" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShowToast"
        android:id="@+id/myFirstButton"
        android:layout_below="@+id/return_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish Activity"
        android:id="@+id/finish_activity"
        android:layout_below="@+id/myFirstButton"
        android:layout_alignRight="@+id/myFirstButton"
        android:layout_alignEnd="@+id/myFirstButton"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Second Activity"
        android:id="@+id/go_sceond_button"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Baidu"
        android:id="@+id/open_baidu_button"
        android:layout_below="@+id/go_sceond_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DialNumber"
        android:id="@+id/tel_number"
        android:layout_below="@+id/open_baidu_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Third Activity"
        android:id="@+id/go_third_button"
        android:layout_alignTop="@+id/go_sceond_button"
        android:layout_toRightOf="@+id/go_sceond_button"
        android:layout_toEndOf="@+id/go_sceond_button" />

</RelativeLayout>
